{
  "name": "jw-meeting-media-fetcher",
  "version": "22.4.2",
  "description": "JW Meeting Media Fetcher",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sircharlo/jw-meeting-media-fetcher.git"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@popperjs/core": "^2.11.5",
    "adm-zip": "^0.5.9",
    "aspectratio": "^2.2.2",
    "axios": "^0.26.1",
    "bootstrap": "^5.1.3",
    "bootstrap-dark-5": "^1.1.3",
    "dayjs": "^1.11.0",
    "electron-updater": "^4.6.5",
    "escape-html": "^1.0.3",
    "fast-xml-parser": "^4.0.7",
    "flatpickr": "^4.6.11",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^7.2.0",
    "graceful-fs": "^4.2.10",
    "h264-mp4-encoder": "^1.0.12",
    "i18n": "^0.14.2",
    "image-size": "^1.0.1",
    "is-audio": "^0.0.0",
    "is-image": "^3.0.0",
    "is-video": "^1.0.1",
    "jquery": "^3.6.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "pdfjs-dist": "^2.13.216",
    "select2": "^4.1.0-rc.0",
    "sql.js": "^1.6.2"
  },
  "build": {
    "appId": "sircharlo.jw-meeting-media-fetcher",
    "productName": "JW Meeting Media Fetcher",
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "Utility",
      "target": "AppImage",
      "icon": "build/icon.png",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      },
      "publish": [
        "github"
      ]
    },
    "buildDependenciesFromSource": true
  },
  "devDependencies": {
    "electron": "^18.0.3",
    "electron-builder": "^23.0.3"
  },
  "scripts": {
    "start-debug": "electron .  --trace-warnings > ./app-run.log  2>&1",
    "start": "electron .",
    "pack-win": "electron-builder --win",
    "pack-win-test": "electron-builder --dir --win",
    "pack-linux-test": "electron-builder --dir --linux",
    "pack-linux": "electron-builder --linux",
    "pack-mac": "electron-builder --mac",
    "publish": "electron-builder --win -p always",
    "publish-linux": "electron-builder --linux -p always",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder"
  },
  "author": "",
  "license": "ISC"
}
