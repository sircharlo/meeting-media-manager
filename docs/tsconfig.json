{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["vite/client", "vitepress"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  },
  "include": [
    ".vitepress/config.mts",
    ".vitepress/theme/index.ts",
    "./data/*.mts",
    "./utils/*.ts",
    "./src/**/*.md"
  ],
  "exclude": [
    ".vitepress/dist",
    ".vitepress/cache",
    "node_modules",
    "**/README.md"
  ]
}
